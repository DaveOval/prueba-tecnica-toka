generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

model UserProfile {
    id        String   @id
    email     String   @unique
    firstName String?  @map("first_name")
    lastName  String?  @map("last_name")
    phone     String?
    address   String?
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    @@map("user_profiles")
    @@index([email])
}
