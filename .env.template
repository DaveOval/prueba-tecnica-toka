# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=auth_db

# MongoDB Configuration
MONGO_USER=admin
MONGO_PASSWORD=admin
MONGO_DB=audit_db

# Redis Configuration
REDIS_PORT=6379

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=development

# pgAdmin Configuration
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin

# Admin User Configuration (Auth Service)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# OpenAI Configuration
# IMPORTANTE: Reemplaza 'tu-api-key-aqui' con tu API key real de OpenAI
# Puedes obtenerla en: https://platform.openai.com/api-keys
OPENAI_API_KEY=tu-api-key-aqui
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4o-mini
DEFAULT_SYSTEM_PROMPT=Eres un asistente útil. Responde preguntas basándote en el contexto proporcionado.

# Frontend Service Configuration (Vite Environment Variables)
# Estas variables definen las rutas base para los servicios de API
# Usan rutas relativas que pasan por el proxy de Vite
VITE_API_AUTH_URL=/api/auth
VITE_API_USER_URL=/api/users
VITE_API_AUDIT_URL=/api/audit
VITE_API_AI_CHAT_URL=/api/ai
VITE_API_VECTORIZATION_URL=/api/ai
VITE_API_URL=/api/auth
